<script>
function addItem(tableId, inputId) {
const input = document.getElementById(inputId); const table = document.getElementById(tableId); const itemName = input.value.trim();
if (itemName !== "") {
const row = table.insertRow(-1); const cell1 = row.insertCell(0); const cell2 = row.insertCell(1); const cell3 = row.insertCell(2); const cell4 = row.insertCell(3);
cell1.textContent = itemName; cell2.innerHTML = '<input type="checkbox">'; cell3.innerHTML = '<input type="checkbox">'; cell4.innerHTML = '<input type="checkbox">';
input.value = ""; } else {
alert("Please enter an item name first."); }
} </script>
